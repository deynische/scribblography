@media break-tablet
    #bottom>.footer-content, .post-followup
        width 40rem
        margin 0 auto
    article
        max-width 40rem
        margin 0 auto
        padding 60px 20px
        .post-body
            .pullquote>*
                margin 20px
    .archive-wrapper
        display flex
        flex-flow row
        justify-content space-between
        .archive-posts
            flex 1 0 66%
            margin 20px
            article
                max-width 100%
                margin 0
                .post-data
                    font-size (1em / (scale ** 2))
            .pagination
                margin 20px 0 100px
        .archive-metadata
            flex 1 1 auto
            order -1
            text-align right
            margin 0
            padding 40px 20px 0
            border-top none
            border-right thick dotted ash
            .tag-list, .category-list, .archive-list
                justify-content flex-end
@media break-small
    body
        font-size 1.375rem
        main
            padding-bottom 120px
    nav, .archive-wrapper
        width 65rem
        margin 0 auto
    #top, #bottom
        padding 0
    #bottom
        height 120px
    #title
        font-size (1em * (scale ** 3))
    article
        padding 60px 0
    .archive-wrapper
        .archive-posts
            margin 20px 0 0 40px
        .archive-metadata
            padding 40px 40px 0 0
@media break-normal
    body
        img
            max-width 63rem
        .video-container
            width 63rem
            padding-bottom (63rem * 0.5625) //56.25% // 16:9